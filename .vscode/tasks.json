{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-console",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/NGA.Console/NGA.Console.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "build-api",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/NGA.Api/NGA.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "build-and-launch-api",
      "dependsOrder": "sequence",
      "dependsOn": ["build-api", "open-api-browser"]
    },
    {
      "label": "open-api-browser",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "Start-Sleep -Seconds 3; Start-Process 'http://localhost:5000/scalar/'"
      ],
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "start-vue-dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/src/NGA.Web"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE.*",
          "endsPattern": "Local:.*"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "watch-console",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/NGA.Console/NGA.Console.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "watch-api",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/NGA.Api/NGA.Api.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    }
  ]
}
